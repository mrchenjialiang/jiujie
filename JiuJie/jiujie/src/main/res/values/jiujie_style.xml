        <item name="android:wallpaperOpenExitAnimation">@anim/slide_right_in</item>
        <item name="android:wallpaperCloseEnterAnimation">@anim/slide_right_out</item>
        <item name="android:wallpaperCloseExitAnimation">@anim/slide_right_out</item>

