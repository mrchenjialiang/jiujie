        <item name="android:actionBarStyle">@style/Slide.actionBar</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Slide.trans.FullScreen" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
