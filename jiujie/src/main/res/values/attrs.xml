<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textStyle_n">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>
    <attr name="textStyle_p">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>

    <attr name="textColor_n" format="reference|color" />
    <attr name="textColor_p" format="reference|color" />
    <attr name="textSize_n" format="dimension"/>
    <attr name="textSize_p" format="dimension"/>
    <attr name="background_n" format="reference|color"/>
    <attr name="background_p" format="reference|color"/>
    <attr name="scaleHeight" format="float"/>
    <attr name="scaleWidth" format="float"/>
    <attr name="lineSpacing" format="dimension"/>
    <attr name="spacing" format="dimension"/>
    <attr name="textSize" format="dimension"/>
    <attr name="text" format="string"/>


    <declare-styleable name="SwitchButton">
        <attr name="mainHeight" format="dimension"/>
        <attr name="circleHeight" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="colorCheck" format="color"/>
        <attr name="colorUnCheck" format="color"/>
        <attr name="checked" format="boolean"/>
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
    </declare-styleable>


    <declare-styleable name="MarqueeViewGroup">
        <attr name="showNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RatingBarCustom">
        <attr name="rbc_star_p" format="reference|color"/>
        <attr name="rbc_star_n" format="reference|color"/>
        <attr name="rbc_num" format="integer"/>
        <attr name="rbc_max" format="integer"/>
        <attr name="rbc_spacing" format="dimension"/>
    </declare-styleable>

    <!--宽高比例布局-->
    <declare-styleable name="ScaleFrameLayout">
        <attr name="scaleHeight"/>
        <attr name="scaleWidth"/>
    </declare-styleable>

    <declare-styleable name="ScaleImageView">
        <attr name="scaleHeight"/>
        <attr name="scaleWidth"/>
    </declare-styleable>

    <declare-styleable name="MarqueeTextView">
        <attr name="textColorMarquee" format="color"/>
        <attr name="textSizeMarquee" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SelectorImage">
        <attr name="src_n" format="reference"/>
        <attr name="src_p" format="reference"/>
        <attr name="background_n"/>
        <attr name="background_p"/>
    </declare-styleable>

    <declare-styleable name="SelectorTextView">
        <attr name="textColor_n"/>
        <attr name="textColor_p"/>
        <attr name="textStyle_n"/>
        <attr name="textStyle_p"/>
        <attr name="textSize_n"/>
        <attr name="textSize_p"/>
        <attr name="background_n"/>
        <attr name="background_p"/>
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="textColor_center" format="color"/>
        <attr name="textColor_other" format="color"/>
        <attr name="textSize"/>
        <attr name="isInfinite" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LabelViewGroup">
        <attr name="lineSpacing"/>
        <attr name="spacing"/>
    </declare-styleable>

    <declare-styleable name="AutoFillLineViewGroup">
        <attr name="lineNum" format="integer"/>
        <attr name="lineSpacing"/>
        <attr name="spacing"/>
    </declare-styleable>

    <declare-styleable name="JJSimpleButton">
        <attr name="bgColor_p" format="color"/>
        <attr name="bgColor_n" format="color"/>
        <attr name="lineColor_p" format="color"/>
        <attr name="lineColor_n" format="color"/>
        <attr name="conner" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="textColor_n"/>
        <attr name="textColor_p"/>
        <attr name="checkEnable" format="boolean"/>
        <attr name="isChecked" format="boolean"/>
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="textColor" format="color" />
        <attr name="textSize"/>
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>
</resources>