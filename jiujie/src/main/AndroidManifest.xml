<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiujie.base">

    <application android:allowBackup="false"
        android:supportsRtl="true">

        <meta-data
            android:name="com.jiujie.base.util.glide.GlideModuleMine"
            android:value="GlideModule" />

        <activity
            android:name=".activity.ImageViewPagerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity
            android:name="com.jiujie.base.activity.WebActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/JK.SwipeBack.Transparent.Theme">
        </activity>

        <activity
            android:name="com.jiujie.base.activity.cropimage.CropImageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/JK.SwipeBack.Transparent.Theme">
        </activity>

    </application>

</manifest>
