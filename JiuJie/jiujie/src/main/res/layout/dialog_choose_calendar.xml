<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/dcc_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/s_item_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dcc_ensure"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/s_item_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="确认"
        android:textColor="@color/title_bg"
        android:textSize="16sp" />

    <View
        android:id="@+id/line1"
        style="@style/HLine"
        android:layout_below="@id/dcc_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/line1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.jiujie.base.widget.PickerView
            android:id="@+id/dcc_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="年"
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.jiujie.base.widget.PickerView
            android:id="@+id/dcc_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="月"
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.jiujie.base.widget.PickerView
            android:id="@+id/dcc_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="日"
            android:textColor="#333333"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>