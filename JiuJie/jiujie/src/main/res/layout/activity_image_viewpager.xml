<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.jiujie.base.widget.PhotoViewPager
        android:id="@+id/iv_ViewPager"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/iv_title_layout"
        android:layout_width="match_parent"
        android:background="@color/black6"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_title"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/sel_press_bg_bright"
                android:src="@drawable/title_jt_left"/>

            <TextView
                android:id="@+id/iv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sel_press_bg_bright"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/title_del"/>
        </LinearLayout>
    </FrameLayout>


</FrameLayout>
